<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginStart="15dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="15dp"
    android:background="#A9A9A9"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:outlineSpotShadowColor="#5C0931"
    card_view:cardCornerRadius="30dp"
    card_view:cardElevation="5dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tvItemName"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="20dp"
        android:textColor="#5C0931"
        android:text="Facemask" />

    <TextView
        android:id="@+id/tvItemBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="280dp"
        android:layout_marginTop="63dp"
        android:textColor="@color/quantum_black_100"
        android:text="Ganier" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="113dp"
        android:layout_toEndOf="@+id/tvItemBrand"
        android:text="$15"
        android:textColor="@color/quantum_black_100" />

    <TextView
        android:id="@+id/tvStore"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="159dp"
        android:layout_marginTop="75dp"
        android:text="Amazon"
        android:textColor="@color/quantum_black_100" />


    <RatingBar
        android:id="@+id/rbratingBar"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:isIndicator="true"
        android:progressTint="#5C0931" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivItemPic"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="150dp"
        android:textColor="@color/quantum_black_100"
        android:text="I paid extra amount of money for fast shipping the delivery was still late" />

    <TextView
        android:id="@+id/tvPurchaseMode"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvStore"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="280dp"
        android:layout_marginTop="90dp"
        android:text="online"
        android:textColor="@color/quantum_black_100" />

    <ImageView
        android:id="@+id/ivItemPic"
        android:layout_width="101dp"
        android:layout_height="69dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="55dp"

        tools:srcCompat="@tools:sample/avatars" />
</androidx.cardview.widget.CardView>