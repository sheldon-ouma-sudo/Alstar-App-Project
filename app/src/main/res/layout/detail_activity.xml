<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="20dp"
    android:background="#A9A9A9"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:outlineSpotShadowColor="#5C0931"
    card_view:cardCornerRadius="50dp"
    card_view:cardElevation="5dp">

    <ImageView
        android:id="@+id/ivItemImage"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="45dp"
        tools:src="@tools:sample/avatars" />

    <RatingBar
        android:id="@+id/rbratingBar"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:isIndicator="true"
        android:progressTint="#5C0931" />

    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingBar"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/ivItemImage"
        android:text="Airpods"
        android:textColor="@color/quantum_black_100" />

    <TextView
        android:id="@+id/tvPurchaseMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingBar"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="250dp"
        android:layout_marginTop="65dp"
        android:layout_toEndOf="@+id/ivItemImage"
        android:textColor="@color/quantum_black_100"
        android:text="CREDIT CARD" />

    <TextView
        android:id="@+id/tvStoreName"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingBar"
        android:layout_marginStart="115dp"
        android:layout_marginTop="70dp"
        android:layout_toEndOf="@+id/ivItemImage"
        android:text="Amazon"
        android:textColor="@color/quantum_black_100" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingBar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="320dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/tvStoreName"
        android:text="$15"
        android:textColor="@color/quantum_black_100" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivItemImage"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="125dp"
        android:textColor="@color/quantum_black_100"
        android:text="I paid extra amount of money for fast shipping the delivery was still late" />

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="87dp"
        android:layout_height="83dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="220dp"
        android:layout_marginBottom="24dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="231dp"
        android:textColor="@color/quantum_black_100"
        android:text="Jadal Williams" />

    <Button
        android:id="@+id/btnPurchase"
        android:layout_width="119dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/tvDescription"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/custom"
        android:text="Purchase"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btnMessage"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_below="@+id/ratingBar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="116dp"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/custom"
        android:text="MESSAGE"
        android:textColor="#fff" />

</androidx.cardview.widget.CardView>
