<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="Fragments.CustomerExperienceFragment">

    <TextView
        android:id="@+id/tvCustomerExperience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginStart="100dp"
        android:textColor="@color/quantum_black_100"

        android:text="Rate your customer experience" />

    <RatingBar
        android:id="@+id/rbItemReview"
        android:layout_width="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginStart="100dp"
        android:progressTint="#5C0931"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/etConcern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginStart="100dp"
        android:ems="10"
        android:textColorHint="@color/quantum_black_100"
        android:hint="Any other concerns" />


    <Button
        android:id="@+id/btnFinish"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="380dp"
        android:background="@drawable/custom"
        android:textColor="#FFFF"
        android:text="FINISH" />
</FrameLayout>